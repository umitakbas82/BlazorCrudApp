@page "/product-list"
@rendermode InteractiveServer
 <div class="container" >
     <div class="row">
         <div class="col-md-6">
             <div class="card">
                @if (Products.Count > 0)
                {
                    <div class="card-header">Product Lis
                     <button class="btn btn-primary" @onclick= "NavigateToAddProductPage"> <i class="oi oi-plus"></i></button>       
                    </div>
                    <div class="card-body">
                        <table class="table table-stripped">
                            <thead>
                                <tr>
                                    <th>Product ID</th>
                                    <th>Product Name</th>
                                    <th>Product Quantity</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Products)
                                {
                                    <tr>
                                        <td>@product.Id</td>
                                        <td>@product.Name</td>
                                        <td>@product.Quantity</td>
                                        <td>
                                            <div class="hstack gap-2">
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                  <div class="alert alert-info"> No Product Avilable</div> 
                }
            </div>
            
         </div>
     </div>
 </div>

@code{
    private List<Product> Products {get;set;}= new();
    private async Task LoadProducts(){
        var products = await ProductService.GetAllProductsAsync();
        Products?.Clear();
        if (Products is null) return;
        foreach (var product in products)
            Products.Add(product);

    }

    protected override async Task OnInitializedAsync(){
        await LoadProducts();
    }

    private void NavigateToAddProductPage(){
        NavigationManager.NavigateTo("manage-product");
    }
}